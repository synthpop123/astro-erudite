---
import BlogCard from '@/components/BlogCard.astro'
import Link from '@/components/Link.astro'
import PageHead from '@/components/PageHead.astro'
import { buttonVariants } from '@/components/ui/button'
import { SITE } from '@/consts'
import Layout from '@/layouts/Layout.astro'
import { getFeaturedPosts } from '@/lib/data-utils'

const blog = await getFeaturedPosts(SITE.featuredPostCount)
---

<Layout class="max-w-3xl">
  <PageHead slot="head" title="Home" />
  <section>
    <div class="rounded-lg border">
      <div class="flex flex-col space-y-1.5 p-6">
        <h3 class="text-3xl leading-none font-medium">Nameless</h3>
        <p class="text-muted-foreground text-sm">
          /{SITE.description}/ &bull; <span class="font-medium">(•‾⌣‾•)</span>
        </p>
      </div>
      <div class="p-6 pt-0">
        <p class="mb-0 text-sm text-muted-foreground">
          <Link
            href="https://spotify.lkwplus.com/?gname=All&token=55177428-8fac-4cd7-9b02-7b93db6f3541"
            class="text-foreground"
            underline
            external>Music</Link
          > (Techno / House / Jungle) · <Link
            href="https://letterboxd.com/lkw123/"
            class="text-foreground"
            underline
            external>Movies</Link
          > (Arthouse / Exploitation) · <Link
            href="https://cataas.com/cat"
            class="text-foreground"
            underline
            external>Coding</Link
          > (Full-Stack / DevOps)
        </p>
      </div>
    </div>
  </section>
  <section class="flex flex-col gap-y-4">
    <h2 class="text-2xl font-medium">Featured posts</h2>
    <ul class="flex flex-col gap-y-4">
      {
        blog.map((post) => (
          <li>
            <BlogCard entry={post} />
          </li>
        ))
      }
    </ul>
    <div class="flex justify-center">
      <Link
        href="/blog"
        class={buttonVariants({ variant: 'ghost' }) + ' group'}
      >
        See all posts <span
          class="ml-1.5 transition-transform group-hover:translate-x-1"
          >&rarr;</span
        >
      </Link>
    </div>
  </section>
</Layout>
